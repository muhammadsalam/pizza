@media (max-width 592px)
    .bottom
        &__details
            font-size 18px
        &__return, &__order
            font-size 14px
        &__return
            padding 10px 20px 10px 22px
        &__order
            padding 14px 26px

@media (max-width: 480px)
    .cart__list
        margin 20px 0 10px 0
    
    .bottom__buttons
        margin-top 10px

@media (max-width 420px)
    .bottom
        &__details
            font-size 16px
        &__buttons
            flex-direction: column
        &__return
            width 100%
            margin-bottom 10px
            text-align center
        &__order
            width 100%
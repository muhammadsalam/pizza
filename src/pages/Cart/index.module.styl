@import '../../variables.styl'

.cart
    max-width: 820px
    width 100%
    margin: auto
    &__list
        padding-left 0
        list-style: none
        margin 30px 0 30px 0

.top
    display flex
    align-items center
    justify-content space-between
    &__title
        margin 0
        display flex
        align-items center
        img
            margin-right 17px
    &__button
        background 0
        border 0
        margin 0
        padding 0
        cursor pointer
        display flex
        align-items center
        color: #B6B6B6
        background-image: linear-gradient(90deg, orange 0%, orange 100%), linear-gradient(90deg, orange 0%, orange 100%)
        background-position: left bottom, right top
        background-size: 0px 2px
        background-repeat: no-repeat
        padding 10px
        margin -10px
        transition: .123s background-size ease-in
        outline: none
        &:hover, &:focus, &:active
            background-size 100% 2px
        img
            margin-right 7px

.bottom
    &__details
        display flex
        justify-content space-between
        align-items center
        font-size 22px
        letter-spacing: .01em
    &__price
        color: orange
    &__buttons
        display flex
        align-items center
        justify-content space-between
        margin-top 40px
    &__return
        padding 17px 40px 17px 31px
        border 1px solid #D3D3D3
        border-radius: 30px
        font-size 16px
        text-decoration none
        color: #CACACA
        transition: .12s color ease-in, border-color .123s ease-in
        svg
            vertical-align middle
            margin-right 13px
            transition: transform .123s ease-in
            path
                transition: .123s stroke ease-in
        &:hover
            color: dark
            border-color: dark
            svg
                transform: translateX(-5px)
                path
                    stroke: dark
    &__order
        background 0
        border: 0
        padding 18px 40px
        margin 0
        background orange
        color white
        font-size 16px
        border-radius 30px
        cursor: pointer
        transition: color .123s ease-in, background-color .123s ease-in
        &:hover
            background-color dark
            color: white


@import '../../variables.styl'

.category
    flex-grow 1
    flex-shrink: 0
    display flex
    overflow: auto
    align-items center
    gap: 8px
    padding-bottom: 20px
    margin-bottom -20px
    button
        padding 14px 27px
        border: 0
        font-weight 700
        font-size 16px
        letter-spacing .015em
        border-radius 30px
        cursor pointer
        transition .2s background ease-in, .2s color ease-in, .2s opacity ease-in
        &:not(.active):hover
            opacity .8
            background dark
            color white
        &.active
            background-color dark
            color white

@media (max-width: 620px)
    .navigation
        width 100%
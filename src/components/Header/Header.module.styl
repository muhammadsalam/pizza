@import '../../variables.styl';

@keyframes logo {
    0%{
        transform rotate(0deg)
    }
    5%{
        transform rotate(16deg)
    }
    20%{
        transform rotate(-13deg)
    }
    30%{
        transform rotate(8deg)
    }
    45%{
        transform rotate(-5deg)
    }
    60%{
        transform rotate(0deg)
    }
    100%{
        transform rotate(0deg)
    }
}

.header
    display flex
    justify-content space-between

.logo
    color inherit
    text-decoration none
    display flex
    align-items center
    &:hover &__text h1
        color orange
    &__img
        transition transform .2s ease-in
        transform-origin bottom
        animation logo 2s ease-in 0s infinite
    &__text
        margin-left 17px
        h1
            font-size 24px
            letter-spacing: 0.01em;
            font-weight 800
            text-transform uppercase
            transition .2s color ease-in
            margin 0
        p
            margin 0
            font-size 16px
            color gray

.button
    display flex
    align-items center
    background orange
    border 0
    border-radius 30px
    padding 16px 23px
    cursor pointer
    transition .123s ease-in
    text-decoration none
    &:hover
        background black
    &__line
        width 1px
        height 25px
        opacity .25
        margin 0 13px
        border 0
        border-left 1px solid white
    &__img
        vertical-align sub
        margin-right 8px
    &__span
        color white
        font-size 16px
        font-weight 700

.line
    width calc(100% + 140px)
    border 0
    height 0
    border-top 1px solid gray2
    margin 35px 0 40px -70px